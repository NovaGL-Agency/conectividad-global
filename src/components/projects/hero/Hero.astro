<style>
    .hero
    {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 5px 100px;
        gap: 30px;
    }

    .hero-top
    {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 20px;
        text-align: center;
    }

    .hero-top h3
    {
        font-size: 48px;
        font-weight: 700;
    }

    .hero-top p
    {
        width: 90%;
        font-size: 18px;
        font-weight: 200;
        color: #818181;
    }

    .hero-bottom
    {
        width: 100%;
        display: flex;
        justify-content: space-between;
        gap: 25px;
    }

    .hero-bottom-left,
    .hero-bottom-right
    {
        flex-basis: 35%;
    }

    .hero-bottom-center
    {
        flex-basis: 60%;
    }

    .hero-bottom-img
    {
        height: 275%;
        position: relative;
        border-radius: 30px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: space-between;
        gap: 20px;
        background: rgba(0, 0, 0, 0.5);
        color: #FFF;
        overflow: hidden;
        text-align: center;
    }

    .hero-bottom-img::before
    {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: url("https://i.imgur.com/yfIBb7m.jpeg");
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        opacity: 1;
        z-index: -1;
        border-radius: 30px;
    }

    .hero-bottom-title
    {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 10px;
    }

    .hero-bottom-title h3
    {
        font-size: 40px;
        font-weight: 700;
    }

    .hero-bottom-title p
    {
        font-size: 16px;
        font-weight: 200;
        color: #818181;
    }

    @media screen and (max-width: 768px)
    {
        .hero
        {
            padding: 25px 10px;
            height: 100%;
        }

        .hero-top h3
        {
            font-size: 30px;
        }

        .hero-top p
        {
            font-size: 12px;
        }

        .hero-bottom
        {
            height: 100%;
            margin-bottom: 40px;
        }

        .hero-bottom-img
        {
            height: 100%;
            border-radius: 10px;
        }

        .hero-bottom-title h3
        {
            font-size: 32px;
        }

        .hero-bottom-title p
        {
            font-size: 14px;
        }
    }
</style>