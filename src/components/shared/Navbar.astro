---
import Button from "./Button.astro";

/*
interface Props
{
    options: string[];
}

const { options } = Astro.props;
*/
---
<nav>
    <div class="img-container">
        <img onclick="window.location.href = 'index.html'" src='https://i.imgur.com/0EZ41J4.png' alt='Logo'/>
    </div>
    <input type="checkbox" id="check"/>
    <label for="check" class="icons">
        <svg class="menu" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
            <path d="M4 6l16 0"></path>
            <path d="M4 12l16 0"></path>
            <path d="M4 18l16 0"></path>
        </svg>
        <svg class="close" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
            <path d="M18 6l-12 12"></path>
            <path d="M6 6l12 12"></path>
        </svg>
    </label>
    <div class="option-container">
        <ul>
            <li><a href="/">Inicio</a></li>
            <li><a href="/about">Nosotros</a></li>
            <li><a href="/services">Servicios</a></li>
            <li><a href="/projects">Proyectos</a></li>
        </ul>
    </div>
    <div class="button-container">
        <Button
                text="Contáctanos"
                color="dark"
                link="#contact"
        >
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24"><path fill="#FFF" d="M16.175 13H5q-.425 0-.712-.288T4 12q0-.425.288-.712T5 11h11.175l-4.9-4.9q-.3-.3-.288-.7t.313-.7q.3-.275.7-.288t.7.288l6.6 6.6q.15.15.213.325t.062.375q0 .2-.062.375t-.213.325l-6.6 6.6q-.275.275-.687.275T11.3 19.3q-.3-.3-.3-.712t.3-.713z"/></svg>
        </Button>
    </div>
    <!--<button><a href="#contact">Contáctanos</a></button>-->
</nav>

<style>
    nav
    {
        max-width: 100%;
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 40px;
    }

    .img-container
    {
        flex-basis: 30%;
    }

    .option-container
    {
        width: 100%;
        flex-basis: 40%;
    }

    .button-container
    {
        flex-basis: 30%;
        display: flex;
        justify-content: flex-end;
    }

    img
    {
        flex-basis: 30%;
        width: 120px;
        cursor: pointer;
    }

    ul
    {
        flex-basis: 40%;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 40px;
        list-style: none;
        transition: 0.3s all ease-in-out;
    }

    a
    {
        text-decoration: none;
        color: inherit;
        font-weight: 500;
        transition: 0.3s all ease-in-out;
    }

    a:hover
    {
        color: #8493B6;
    }

    .icons
    {
        cursor: pointer;
        display: none;
    }

    #check
    {
        display: none;
    }

    @media screen and (max-width: 767px)
    {
        nav
        {
            width: 100%;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        img
        {
            width: 70px;
            cursor: pointer;
        }

        .icons
        {
            display: flex;
        }

        .option-container
        {
            display: none;
        }

        #check:checked~.icons .menu
        {
            display: none;
        }

        #check:checked~.icons .close
        {
            display: flex;
        }

        #check:checked~.option-container
        {
            position: absolute;
            top: 0;
            left: 0;
            width: 80%;
            height: 100vh;
            background: #142133;
            display: flex;
            align-items: center;
            z-index: 1;
            transition: 1s left ease-in-out;
        }

        #check:checked~.option-container ul
        {
            width: 100%;
            height: 100vh;
            display: flex;
            flex-direction: column;
            text-align: left;
            font-size: 30px;
            color: #FFF;
            padding: 30px;
            align-items: flex-start;
            z-index: 1;
            transition: 1s left ease-in-out;
        }

        #check:checked~.option-container a
        {
            text-align: left;
        }

        .close
        {
            display: none;
        }

        .button-container
        {
            display: none;
        }
    }

    @media screen and (min-width: 768px) and (max-width: 1024px)
    {
        nav
        {
            padding: 30px 30px;
        }

        ul
        {
            gap: 25px;
        }
    }
</style>