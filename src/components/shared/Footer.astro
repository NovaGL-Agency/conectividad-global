---
import FooterForm from '../react-components/FooterForm';

interface Props {
    options: string[];
}

const { options } = Astro.props;
---

<footer class="footer">
    <div class="footer-top">
        <div class="footer-top-left">
            <div class="img-container">
                <img onclick="window.location.href = 'index.html'" src='https://i.imgur.com/ZXHXWTM.png' alt='Logo'/>
            </div>
            <p>Unlock Your Business's Potential with Our Social Media Solutions</p>
            <ul>
                <li><a href="index.html">Home</a></li>
                <li><a href="about.html">About Us</a></li>
                <li><a href="services.html">Services</a></li>
                <li><a href="contact.html">Contact</a></li>
            </ul>
        </div>
        <div class="footer-top-right">
            <p>Stay Up-to-Date with the Latest Social Media Strategies and Insights</p>
            <FooterForm />
        </div>
    </div>

    <div class="footer-bottom">
        <svg width="100%" height="10" fill="none" xmlns="http://www.w3.org/2000/svg">
            <g>
                <path d="M5 1H2000" stroke="#C7C7C7" stroke-linecap="round"/>
            </g>
        </svg>
        <div class="footer-bottom-info">
            <h4>Â© 2024 Conectividad Global. All rights reserved.</h4>
            <h4>Designed by NovaGL</h4>
        </div>
    </div>
</footer>

<style>
    footer
    {
        background-color: #142133;
        padding: 60px 100px;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 40px;
        color: #FFF;
    }

    img
    {
        flex-basis: 30%;
        width: 120px;
    }

    .footer-top
    {
        display: flex;
        justify-content: space-between;
        width: 100%;
    }

    .footer-top-left
    {
        flex-basis: 40%;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        gap: 15px;
    }

    ul
    {
        width: 100%;
        list-style-type: none;
        padding: 0;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    a
    {
        text-decoration: none;
        color: inherit;
    }

    .footer-top-right
    {
        flex-basis: 40%;
        display: flex;
        flex-direction: column;
        justify-content: flex-end;
        align-items: flex-end;
        gap: 20px;
    }

    .footer-bottom
    {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 20px;
        width: 100%;
        margin-top: 20px;
    }

    .footer-bottom-info
    {
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }
</style>
