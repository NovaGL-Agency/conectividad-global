---
interface Props  {
    index: string;
    title: string;
    description: string;
}

const { index, title, description } = Astro.props;
---
<div class="item">
    <div class="item-top">
        <div class="item-top-title">
            <h1>{index}</h1>
            <h4>{title}</h4>
        </div>
        <svg xmlns="http://www.w3.org/2000/svg" width="26" height="13" viewBox="0 0 26 13" fill="none">
            <path d="M24.3734 12.3556C24.1597 12.3555 23.948 12.3149 23.7506 12.2362C23.5531 12.1574 23.3737 12.0419 23.2227 11.8964L14.9026 3.89192C14.6508 3.6496 14.3519 3.45739 14.0228 3.32624C13.6938 3.1951 13.3412 3.1276 12.985 3.1276C12.6289 3.1276 12.2762 3.1951 11.9472 3.32624C11.6182 3.45739 11.3192 3.6496 11.0674 3.89192L2.75715 11.887C2.45031 12.1722 2.03935 12.3299 1.61278 12.3264C1.18621 12.3228 0.778156 12.1582 0.476512 11.868C0.174869 11.5778 0.0037683 11.1852 6.15016e-05 10.7748C-0.00364529 10.3644 0.160339 9.96902 0.456694 9.67382L8.76698 1.6787C9.88639 0.60374 11.4034 0 12.985 0C14.5666 0 16.0837 0.60374 17.2031 1.6787L25.5242 9.68426C25.7515 9.90321 25.9062 10.1821 25.9689 10.4856C26.0315 10.7892 25.9992 11.1037 25.876 11.3896C25.7529 11.6755 25.5444 11.9198 25.277 12.0918C25.0095 12.2637 24.6951 12.3555 24.3734 12.3556Z" fill="#8493B6"/>
        </svg>
    </div>
    <div class="item-bottom">
        <p>{description}</p>
    </div>
</div>

<style>
    .item
    {
        display: flex;
        flex-direction: column;
        gap: 25px;
        background: #142133;
        border-radius: 30px;
        color: rgba(255, 255, 255, 0.9);
        padding: 30px;
    }

    .item-top
    {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 40px;
    }

    .item-top-title
    {
        display: flex;
        gap: 20px;
    }

    .item-top-title h1
    {
        font-size: 40px;
        font-weight: 700;
    }

    .item-top-title h4
    {
        font-size: 18px;
        font-weight: 200;
    }

    .item-bottom p
    {
        font-size: 14px;
        font-weight: 200;
    }
</style>